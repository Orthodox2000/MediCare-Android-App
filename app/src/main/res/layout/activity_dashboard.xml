<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgLight">

    <!-- Semi-circular background with Welcome Text -->

    <!-- Subtitle -->

    <!-- Add Health Data Button -->

    <!-- Emergency Button -->


        android:id="@+id/welcomeContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029">

        <!-- Semi-circular shape -->

        <!-- Welcome Text over the semi-circular background -->


    <Button
        android:id="@+id/btnAddData"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="300dp"
        android:backgroundTint="@color/primaryGreen"
        android:padding="12dp"
        android:text="âž• Add Health Data"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/welcomeContainer"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/btnEmergency"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:backgroundTint="#EF4444"
        android:text="ðŸš¨ Emergency"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/btnAddData"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logout Button -->

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="120dp"
        android:layout_height="64dp"
        android:layout_margin="24dp"
        android:layout_marginBottom="140dp"
        android:backgroundTint="#05000000"
        android:text="Logout"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/welcomeContainer"
        app:layout_constraintVertical_bias="0.796" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="45dp" />

    <ImageView
        android:id="@+id/welcomeBackground"
        android:layout_width="476dp"
        android:layout_height="254dp"
        android:scaleType="fitXY"
        android:src="@drawable/semi_circular_background"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="-12dp" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="92dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="Welcome to MediCare"
        android:textColor="@color/textLight"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/welcomeBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="364dp"
        android:layout_height="30dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="Your health, simplified."
        android:textColor="@color/textLight"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/welcomeBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcome"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>